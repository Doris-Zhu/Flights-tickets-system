<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5" style="background-color: beige;">
            <h5 class="card-title text-center mb-5 fw-light fs-5">
                Sign Up as Airline Staff
            </h5>
            <p style="color:red;">
                {{message}}
            </p>
            <form method="POST" action="/register/staff">
                <div class='form-row'>
                    <label>Username:&nbsp;</label>
                    <input name="username" type="text" style="margin-left: 3px;">
                </div>
                <div class='form-row' style="margin-top:10px;">
                    <label>Password:&nbsp;</label>
                    <input name="password" type="password" style="margin-left: 3px;">
                </div>
                <div class='form-row' style="margin-top:10px;">
                    <label>First Name:&nbsp;</label>
                    <input name="firstname" type="text" style="margin-left: 3px;">
                </div>
                <div class='form-row' style="margin-top:10px;">
                    <label>Last Name:&nbsp;</label>
                    <input name="lastname" type="text" style="margin-left: 3px;">
                </div>
                <div class='form-row' style="margin-top:10px;">
                    <label>Date of Birth: (YYYY-MM-DD)&nbsp;</label>
                    <input name="dob" type="text" style="margin-left: 3px;">
                </div>
                <div class='form-row' style="margin-top:10px;">
                    <label>Airline Name:&nbsp;</label>
                    <input name="airline" type="text" style="margin-left: 3px;">
                </div>
                <div class='form-row'>
                    <input type="submit" class="submit btn btn-success" value="Register">
                </div>
                <div class='form-row'>
                    Already have an account?&nbsp;
                    <a href="/login">Login</a>
                    .
                </div>
            </form>
        </div>
    </div>
</div>
